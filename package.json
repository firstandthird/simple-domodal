{
  "name": "simple-domodal",
  "version": "1.2.0",
  "description": "Simple modal using Domodule Edit",
  "main": "index.js",
  "module": "dist/simple-domodal.esm.js",
  "scripts": {
    "start": "scriptkit",
    "build": "scriptkit build",
    "dev": "scriptkit dev",
    "pretest": "scriptkit build",
    "test": "cat test/simple-domodal.test.dist.js | tape-run --static . --browser phantomjs --render tap-spec",
    "prepublishOnly": "scriptkit"
  },
  "keywords": [
    "modal",
    "Domodule"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/firstandthird/simple-domodal.git"
  },
  "bugs": {
    "url": "https://github.com/firstandthird/simple-domodal/issues"
  },
  "homepage": "https://github.com/firstandthird/simple-domodal#readme",
  "devDependencies": {
    "eslint-config-firstandthird": "4.3.0",
    "eslint-plugin-import": "2.16.0",
    "phantomjs-prebuilt": "2.1.16",
    "scriptkit": "2.0.3",
    "tap-spec": "5.0.0",
    "tape-rollup": "4.6.4",
    "tape-run": "5.0.0"
  },
  "scriptkit": {
    "serve": {
      "enabled": true
    },
    "files": {
      "dist/simple-domodal.js": "index.js",
      "test/simple-domodal.test.dist.js": "test/simple-domodal.test.js"
    },
    "scripts": {
      "babel": {
        "exclude": [
          "node_modules/tape-rollup/*"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": "firstandthird",
    "env": {
      "browser": true
    }
  },
  "dependencies": {
    "domassist": "^2.0.2",
    "domodule": "^6.0.0"
  }
}
